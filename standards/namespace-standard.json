      "modified": 1755775754,
      "type": "OBJECT",
      "form": "ASSET",
      "distordia-type": "namespace",
      "namespace": "acme-corp",
      "tier": "L2",
      "stake": 2500,
      "verified-ts": 1750000000,
      "valid-until": 1781536000,
      "protocols": "content,masterdata,a2a",
      "delegation-chain": "acme-corp",
      "entity-type": "organization",
      "display-name": "Acme Corporation",
      "description": "Industrial widgets and components manufacturer",
      "website": "https://acme-corp.example.com",
      "logo-url": "https://acme-corp.example.com/logo.png",
      "slashing-events": 0,
      "reputation": 850,
      "attestation-hash": "0x7f3a1b2c3d4e5f6789012345678901234567890123456789012345678901234a",
      "attester": "distordia"
    },
    {
      "_comment": "Delegated agent namespace",
      "address": "92bFeRDWst5lg7GwwxhIEKCBMgAiv8cYUROlKTftH7X2Gip9Dny",
      "owner": "b2d8c799fef322b3d25ec5b85999f1de0e5788da2c2eb32e7cdd64cefc0e1f71",
      "version": 1,
      "created": 1754000000,
      "modified": 1754000000,
      "type": "OBJECT",
      "form": "ASSET",
      "distordia-type": "namespace",
      "namespace": "acme-logistics-agent",
      "tier": "L0",
      "stake": 0,
      "verified-ts": 1754000000,
      "valid-until": 1785536000,
      "protocols": "a2a",
      "delegation-chain": "acme-corp|acme-logistics-agent",
      "parent": "acme-corp",
      "entity-type": "agent",
      "display-name": "Acme Logistics Agent",
      "description": "Automated logistics coordination agent",
      "slashing-events": 0,
      "reputation": 720,
      "attestation-hash": "0x8f4b2c3d4e5f6789012345678901234567890123456789012345678901234b",
      "attester": "acme-corp"
    }
  ],
  "tierDefinitions": {
    "L0": {
      "name": "Verified Agent",
      "stakeRequired": 0,
      "annualFee": 1,
      "lockPeriodDays": 0,
      "slashingRisk": "behavioral only",
      "verification": "automated",
      "canDelegate": false
    },
    "L1": {
      "name": "Verified Individual",
      "stakeRequired": 100,
      "annualFee": 10,
      "lockPeriodDays": 30,
      "slashingRisk": "up to 50%",
      "verification": "automated",
      "canDelegate": false
    },
    "L2": {
      "name": "Verified Organization",
      "stakeRequired": 2500,
      "annualFee": 250,
      "lockPeriodDays": 90,
      "slashingRisk": "up to 75%",
      "verification": "automated + domain",
      "subNamespaces": 5,
      "canDelegate": true
    },
    "L3": {
      "name": "Verified Enterprise",
      "stakeRequired": 25000,
      "annualFee": 2500,
      "lockPeriodDays": 180,
      "slashingRisk": "up to 100% + legal",
      "verification": "legal entity",
      "subNamespaces": "unlimited",
      "sla": true,
      "canDelegate": true
    },
    "L4": {
      "name": "Human Attested",
      "stakeRequired": 50000,
      "annualFee": 5000,
      "lockPeriodDays": 180,
      "slashingRisk": "up to 100% + legal",
      "verification": "human expert",
      "subNamespaces": "unlimited",
      "sla": true,
      "humanAttestation": true,
      "canDelegate": true
    }
  },
  "nexus": {
    "format": "JSON",
    "createCommand": "assets/create/asset format=JSON name=ns-{namespace} json='[...]'",
    "queryEndpoint": "register/list/assets:asset",
    "queryFilter": "distordia-type = 'namespace'"
  },
  "notes": [
    "Timestamps stored as uint64 Unix timestamps",
    "Stake stored in base DIST units (no decimals)",
    "Attestation created by Distordia or parent namespace (delegation)",
    "Reputation score 0-1000, starts at 500"
  ]
}
