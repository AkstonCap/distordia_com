{
  "$id": "https://distordia.com/standards/namespace.v1.json",
  "title": "Distordia Namespace Attestation Standard",
  "description": "Schema for namespace attestation assets registered on the Nexus blockchain. Core identity primitive for all Distordia protocols.",
  "version": "1.0.0",
  "nexusFormat": "JSON",
  "maxSize": "1KB (system fields use ~180 bytes, ~820 bytes available for data)",
  "nexusFields": [
    { "name": "distordia-type", "type": "string", "value": "namespace", "mutable": false, "maxlength": 16 },
    { "name": "namespace", "type": "string", "value": "", "mutable": false, "maxlength": 32 },
    { "name": "tier", "type": "string", "value": "L0", "mutable": true, "maxlength": 4 },
    { "name": "stake", "type": "uint64", "value": 0, "mutable": true },
    { "name": "verified-ts", "type": "uint64", "value": 0, "mutable": false },
    { "name": "valid-until", "type": "uint64", "value": 0, "mutable": true },
    { "name": "protocols", "type": "string", "value": "", "mutable": true, "maxlength": 64 },
    { "name": "delegation-chain", "type": "string", "value": "", "mutable": false, "maxlength": 128 },
    { "name": "parent", "type": "string", "value": "", "mutable": false, "maxlength": 32 },
    { "name": "entity-type", "type": "string", "value": "individual", "mutable": false, "maxlength": 16 },
    { "name": "display-name", "type": "string", "value": "", "mutable": true, "maxlength": 128 },
    { "name": "description", "type": "string", "value": "", "mutable": true, "maxlength": 256 },
    { "name": "website", "type": "string", "value": "", "mutable": true, "maxlength": 128 },
    { "name": "logo-url", "type": "string", "value": "", "mutable": true, "maxlength": 128 },
    { "name": "jurisdiction", "type": "string", "value": "", "mutable": false, "maxlength": 2 },
    { "name": "legal-id", "type": "string", "value": "", "mutable": false, "maxlength": 32 },
    { "name": "slashing-events", "type": "uint16", "value": 0, "mutable": true },
    { "name": "reputation", "type": "uint16", "value": 500, "mutable": true },
    { "name": "attestation-hash", "type": "string", "value": "", "mutable": false, "maxlength": 66 },
    { "name": "attester", "type": "string", "value": "distordia", "mutable": false, "maxlength": 32 }
  ],
  "fieldDefinitions": {
    "distordia-type": {
      "description": "Asset type identifier. Must be 'namespace'."
    },
    "namespace": {
      "description": "Unique namespace identifier.",
      "pattern": "^[a-z][a-z0-9\\-]{2,31}$"
    },
    "tier": {
      "description": "Verification tier level.",
      "enum": ["L0", "L1", "L2", "L3", "L4"]
    },
    "stake": {
      "description": "DIST tokens staked (in base units)."
    },
    "verified-ts": {
      "description": "Unix timestamp of initial verification."
    },
    "valid-until": {
      "description": "Unix timestamp of attestation expiration."
    },
    "protocols": {
      "description": "Comma-separated list of activated protocols."
    },
    "delegation-chain": {
      "description": "Pipe-separated delegation path (e.g., 'acme-corp|acme-agent-01')."
    },
    "parent": {
      "description": "Parent namespace if delegated sub-namespace."
    },
    "entity-type": {
      "description": "Type of entity.",
      "enum": ["individual", "organization", "enterprise", "agent", "swarm"]
    },
    "display-name": {
      "description": "Human-readable display name."
    },
    "description": {
      "description": "Brief description."
    },
    "website": {
      "description": "Official website URL."
    },
    "logo-url": {
      "description": "Logo/avatar URL."
    },
    "jurisdiction": {
      "description": "ISO 3166-1 alpha-2 country code (L3+)."
    },
    "legal-id": {
      "description": "LEI or company registration number."
    },
    "slashing-events": {
      "description": "Number of slashing events."
    },
    "reputation": {
      "description": "Reputation score (0-1000)."
    },
    "attestation-hash": {
      "description": "Hash of attestation data for integrity verification."
    },
    "attester": {
      "description": "Namespace that issued this attestation (usually 'distordia')."
    }
  },
  "required": ["distordia-type", "namespace", "tier", "verified-ts", "valid-until", "attester"],
  "examples": [
    {
      "_comment": "Example asset as returned by Nexus API",
      "address": "87aDdQCVrs4kf6FvffvgoHDJBLfAhu7bXSNkJResG6W1Fho8Cmx",
      "owner": "a1c9b698edf211a2c14db4a74888f0cd9d4677c9b1da21d6fbcc53bdebb0d860",
      "version": 1,
