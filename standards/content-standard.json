{
  "$id": "https://distordia.com/standards/content.v1.json",
  "title": "Distordia Content Verification Standard",
  "description": "Schema for content provenance assets registered on the Nexus blockchain. Used to verify authentic content and combat AI-generated misinformation.",
  "version": "1.0.0",
  "nexusFormat": "JSON",
  "maxSize": "1KB (system fields use ~180 bytes, ~820 bytes available for data)",
  "nexusFields": [
    { "name": "distordia-type", "type": "string", "value": "content", "mutable": false, "maxlength": 16 },
    { "name": "status", "type": "string", "value": "official", "mutable": true, "maxlength": 16 },
    { "name": "url", "type": "string", "value": "", "mutable": false, "maxlength": 256 },
    { "name": "title", "type": "string", "value": "", "mutable": false, "maxlength": 128 },
    { "name": "author", "type": "string", "value": "", "mutable": false, "maxlength": 64 },
    { "name": "publisher", "type": "string", "value": "", "mutable": false, "maxlength": 64 },
    { "name": "published", "type": "string", "value": "", "mutable": false, "maxlength": 10 },
    { "name": "hash", "type": "string", "value": "", "mutable": false, "maxlength": 72 },
    { "name": "content-type", "type": "string", "value": "article", "mutable": false, "maxlength": 16 },
    { "name": "lang", "type": "string", "value": "en", "mutable": false, "maxlength": 2 },
    { "name": "license", "type": "string", "value": "", "mutable": false, "maxlength": 32 },
    { "name": "keywords", "type": "string", "value": "", "mutable": false, "maxlength": 128 },
    { "name": "supersedes", "type": "string", "value": "", "mutable": false, "maxlength": 64 }
  ],
  "fieldDefinitions": {
    "distordia-type": {
      "description": "Asset type identifier. Must be 'content'.",
      "enum": ["content"]
    },
    "status": {
      "description": "Verification status.",
      "enum": ["official", "user", "pending", "revoked"]
    },
    "url": {
      "description": "Canonical URL of the content being verified.",
      "format": "uri"
    },
    "title": {
      "description": "Title of the content (article, video, image, etc.)."
    },
    "author": {
      "description": "Name or identifier of the content author."
    },
    "publisher": {
      "description": "Name of the publishing organization or platform."
    },
    "published": {
      "description": "Publication date in YYYY-MM-DD format.",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "hash": {
      "description": "SHA-256 hash of content body (format: sha256:abc123...)."
    },
    "content-type": {
      "description": "Type of content being registered.",
      "enum": ["article", "video", "image", "audio", "document", "dataset", "other"]
    },
    "lang": {
      "description": "ISO 639-1 language code (e.g., 'en', 'no').",
      "pattern": "^[a-z]{2}$"
    },
    "license": {
      "description": "Content license (e.g., 'CC-BY-4.0', 'ARR')."
    },
    "keywords": {
      "description": "Comma-separated keywords for categorization."
    },
    "supersedes": {
      "description": "Address of previous version (for updates/corrections)."
    }
  },
  "required": ["distordia-type", "url", "title"],
  "examples": [
    {
      "_comment": "Example asset as returned by Nexus API",
      "address": "8xaDdQCVrs4kf6FvffvfoHDJBLfAhu7bXSNkJResG6W1Fho8Cmx",
      "owner": "a1x9b698edf211a2c14db3a74888f0cd9d4677c9b1da21d6fbcc53bdebb0d860",
      "version": 1,
      "created": 1755775754,
      "modified": 1755775754,
      "type": "OBJECT",
      "form": "ASSET",
      "distordia-type": "content",
      "status": "official",
      "url": "https://example.com/news/article-12345",
      "title": "Breaking: Major Discovery in Climate Research",
      "author": "Jane Smith",
      "publisher": "Example News",
      "published": "2026-01-15",
      "hash": "sha256:a1b2c3d4e5f6789012345678901234567890123456789012345678901234abcd",
      "content-type": "article",
      "lang": "en",
      "license": "CC-BY-4.0",
      "keywords": "climate,research,science"
    }
  ],
  "nexus": {
    "format": "JSON",
    "createCommand": "assets/create/asset format=JSON name=content-{hash-prefix} json='[{\"name\":\"distordia-type\",\"type\":\"string\",\"value\":\"content\",\"mutable\":false},{\"name\":\"url\",\"type\":\"string\",\"value\":\"...\",\"mutable\":false,\"maxlength\":256},...]'",
    "queryEndpoint": "register/list/assets:asset",
    "queryFilter": "distordia-type = 'content' AND url = '{url}'"
  }
}
